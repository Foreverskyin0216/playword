{
  "name": "@playword/root",
  "private": true,
  "keywords": [
    "ai",
    "anthropic",
    "automated test",
    "google",
    "langchain",
    "openai",
    "playwright",
    "voyageai"
  ],
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Foreverskyin0216/playword.git"
  },
  "license": "MIT",
  "author": "Zong-Wei Lu <foreverskyin@gmail.com>",
  "type": "module",
  "scripts": {
    "test": "vitest run --coverage",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier . --write",
    "prepare": "[ -d '.husky' ] && husky || (mkdir .husky && husky); echo 'npx --no-install commitlint --edit $1' > .husky/commit-msg; echo 'npm run pre-commit' > .husky/pre-commit; echo 'npm run pre-push' > .husky/pre-push",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test",
    "prepublishOnly": "npx lerna run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.1",
    "husky": "^9.1.7",
    "lerna": "^8.2.2",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.3",
    "vitest": "^3.1.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.40.1"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
